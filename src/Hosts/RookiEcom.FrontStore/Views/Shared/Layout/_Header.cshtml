@using System.Security.Claims

<header class="site-header sticky-top">
    <nav class="navbar navbar-expand-lg navbar-light bg-white">
        <div class="container">
            <a class="navbar-brand site-logo me-3 me-lg-4" asp-controller="Home" asp-action="Index">
                <img src="~/nashtech-logo.jpg" alt="Nashtech RookiEcom Logo" />
            </a>

            <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarMainContent"
                aria-controls="navbarMainContent"
                aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <ul class="collapse navbar-collapse" id="navbarMainContent">
                <form class="d-flex header-search my-2 my-lg-0 flex-grow-1 mx-lg-auto order-lg-1" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search products..." aria-label="Search">
                    <button class="btn btn-outline-primary" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </form>
                
                <ul class="navbar-nav user-actions-cart-list ms-lg-auto order-lg-2 d-flex flex-row align-items-center justify-content-between justify-content-lg-start">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        var name = User.FindFirstValue("name") ?? User.Identity.Name;
                        <li class="nav-item dropdown my-1 my-lg-0 me-lg-3">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownUser" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i> Hello, @name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownUser">
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                    <i class="bi bi-person-lines-fill me-2"></i> My Profile
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <button type="button" class="dropdown-item" data-bs-toggle="modal" data-bs-target="#logoutConfirmModal">
                                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                                    </button>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item my-1 my-lg-0 me-lg-2">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    }

                    <li class="nav-item my-1 my-lg-0">
                        <a class="nav-link position-relative nav-cart ps-lg-2" asp-controller="Cart" asp-action="Index" title="Shopping Cart">
                            <i class="bi bi-cart3 fs-5"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                0 <span class="visually-hidden">items in cart</span>
                            </span>
                        </a>
                    </li>
                </ul>
            </ul>
        </div>
    </nav>
</header>