@model RookiEcom.FrontStore.ViewModels.ProductsByCategoryViewModel
@{
    ViewData["Title"] = Model.Category?.Name ?? "Products";
    var category = Model.Category;
}

@if (category != null)
{
    <div class="category-banner">
        @if (!string.IsNullOrEmpty(category.Image))
        {
            <img src="@category.Image" alt="@category.Name" />
        }
        <div>
            <h1>@category.Name</h1>
            @if (!string.IsNullOrEmpty(category.Description))
            {
                <p class="text-muted mb-0 d-none d-md-block">@category.Description</p>
            }
        </div>
    </div>
}

<div class="row mt-4">
    @* 2. Filter Sidebar (Left) *@
    <div class="col-lg-3 filter-sidebar">
        <div class="card">
            <div class="card-header">Filters</div>
            <div class="list-group list-group-flush">
                <a href="#" class="list-group-item list-group-item-action">Price Range (TODO)</a>
                <a href="#" class="list-group-item list-group-item-action">Brand (TODO)</a>
                <a href="#" class="list-group-item list-group-item-action">Color (TODO)</a>
                @* Add more filter categories based on your data *@
            </div>
        </div>
         @* Add more filter cards if needed *@
    </div>

    @* 3. Product Listing (Right) *@
    <div class="col-lg-9">
        @* Toolbar: Item Count & Sorting *@
        <div class="d-flex justify-content-between align-items-center mb-3 bg-light p-2 rounded">
            <span class="text-muted">@Model.Products?.Count items found</span>
            <div class="d-flex align-items-center">
                 <label for="sortOrder" class="form-label me-2 mb-0 small">Sort by:</label>
                 <select class="form-select form-select-sm" id="sortOrder" style="width: auto;"> @* TODO: Implement sorting logic *@
                    <option selected>Recommended</option>
                    <option value="price_asc">Price: Low to High</option>
                    <option value="price_desc">Price: High to Low</option>
                    <option value="name_asc">Name: A-Z</option>
                    <option value="name_desc">Name: Z-A</option>
                </select>
            </div>
        </div>

        @* Product Grid *@
        @if (Model.Products?.Items.Any() == true)
        {
            <div class="row row-cols-2 row-cols-md-3 row-cols-xl-4 g-3"> @* Adjust columns as needed *@
                @foreach (var product in Model.Products.Items)
                {
                    <div class="col">
                        @await Html.PartialAsync("_ProductCard", product)
                    </div>
                }
            </div>

            @* Pagination *@
            <nav aria-label="Page navigation" class="mt-4 d-flex justify-content-center">
                @* Use a proper Tag Helper or pagination component library for better pagination *@
                 @{
                     var totalPages = (int)Math.Ceiling((double)(Model.Products?.Count ?? 0) / Model.PageSize);
                     if (totalPages > 1)
                     {
                         <ul class="pagination">
                             <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                 <a class="page-link" asp-action="ByCategory" asp-route-categoryId="@Model.Category?.Id" asp-route-page="@(Model.CurrentPage - 1)" asp-route-pageSize="@Model.PageSize">Previous</a>
                             </li>
                             @for (int i = 1; i <= totalPages; i++)
                             {
                                 <li class="page-item @(i == Model.CurrentPage ? "active" : "")"><a class="page-link" asp-action="ByCategory" asp-route-categoryId="@Model.Category?.Id" asp-route-page="@i" asp-route-pageSize="@Model.PageSize">@i</a></li>
                             }
                             <li class="page-item @(Model.CurrentPage == totalPages ? "disabled" : "")">
                                 <a class="page-link" asp-action="ByCategory" asp-route-categoryId="@Model.Category?.Id" asp-route-page="@(Model.CurrentPage + 1)" asp-route-pageSize="@Model.PageSize">Next</a>
                             </li>
                         </ul>
                     }
                 }
             </nav>
        }
        else
        {
            <div class="alert alert-info">No products found matching your criteria.</div>
        }
    </div>
</div>